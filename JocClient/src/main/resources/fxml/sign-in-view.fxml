<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.gui.SignInController"
            prefWidth="300" prefHeight="200">

    <children>
        <GridPane layoutX="20" layoutY="20" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Alias:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="aliasField" promptText="Introdu alias"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>


            <Button text="Start Game" onAction="#handleStartGameButton"
                    maxWidth="Infinity"
                    GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        </GridPane>
    </children>
</AnchorPane>
